<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Player" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/backWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:actionOverflowButtonStyle">@style/DotsTheme.OverFlow</item>
    </style>

    <style name="DotsTheme.OverFlow" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:src">@drawable/ic_ellipsis_vertical_outline</item>
        <item name="android:tint">@color/backWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/tin_2</item>
        <item name="buttonBarButtonStyle">@style/DarkTheme</item>
        <item name="actionOverflowButtonStyle">@style/DarkTheme</item>
    </style>

    <style name="DarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/backWhite</item>
    </style>

</resources>